doctype strict
head
  meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
  title Email Template for Order Confirmation Email
  // Start Common CSS
  style(type='text/css').
    #outlook a {
    padding: 0;
    }
    body {
    width: 100% !important;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    margin: 0;
    padding: 0;
    font-family: Helvetica, arial, sans-serif;
    }
    .ExternalClass {
    width: 100%;
    }
    .ExternalClass,
    .ExternalClass p,
    .ExternalClass span,
    .ExternalClass font,
    .ExternalClass td,
    .ExternalClass div {
    line-height: 100%;
    }
    .backgroundTable {
    margin: 0;
    padding: 0;
    width: 100% !important;
    line-height: 100% !important;
    }
    .main-temp table {
    border-collapse: collapse;
    mso-table-lspace: 0pt;
    mso-table-rspace: 0pt;
    font-family: Helvetica, arial, sans-serif;
    }
    .main-temp table td {
    border-collapse: collapse;
    }
  // End Common CSS
table.backgroundTable.main-temp(width='100%' cellpadding='0' cellspacing='0' border='0' style='background-color: #d5d5d5;')
  tbody
    tr
      td
        table.devicewidth(width='600' align='center' cellpadding='15' cellspacing='0' border='0' style='background-color: #ffffff;')
          tbody
            // Start header Section
            tr
              td(style='padding-top: 30px;')
                table.devicewidthinner(width='560' align='center' cellpadding='0' cellspacing='0' border='0' style='border-bottom: 1px solid #eeeeee; text-align: center;')
                  tbody
                    tr
                      td(style='padding-bottom: 10px;')
                        a(href='https://htmlcodex.com')
                          img(src='images/logo.png' alt='PapaChina')
                    tr
                      td(style='font-size: 14px; line-height: 18px; color: #666666;')
                        | 3828 Mall Road
                    tr
                      td(style='font-size: 14px; line-height: 18px; color: #666666;')
                        | Los Angeles, California, 90017
                    tr
                      td(style='font-size: 14px; line-height: 18px; color: #666666;')
                        | Phone: 310-807-6672 | Email: info@example.com
                    tr
                      td(style='font-size: 14px; line-height: 18px; color: #666666; padding-bottom: 25px;')
                        strong Order Number:
                        | #{id} | 
                        strong Order Date:
                        |               #{claimedAt}
            // End header Section
            // Start address Section
            tr
              td(style='padding-top: 0;')
                table.devicewidthinner(width='560' align='center' cellpadding='0' cellspacing='0' border='0' style='border-bottom: 1px solid #bbbbbb;')
                  tbody
                    tr
                      td(style='width: 100%; font-size: 16px; font-weight: bold; color: #666666; padding-bottom: 5px;')
                        | Delivery Adderss
                    tr
                      td(style='width: 100%; font-size: 14px; line-height: 18px; color: #666666;')
                        | #{address}
                    tr
                      td(style='width: 100%; font-size: 14px; line-height: 18px; color: #666666;')
                        | #{district}
                    tr
                      td(style='width: 100%; font-size: 14px; line-height: 18px; color: #666666; padding-bottom: 10px;')
                        | #{state}-#{postalCode}
    // End address Section
    // Start product Section
    tr
      td(style='padding-top: 0;')
        table.devicewidthinner(width='560' align='center' cellpadding='0' cellspacing='0' border='0' style='border-bottom: 1px solid #eeeeee;')
          tbody
            tr
              td(colspan='2' style='font-size: 14px; font-weight: bold; color: #666666; padding-bottom: 5px;')
                | Product Name - #{productName}
    
