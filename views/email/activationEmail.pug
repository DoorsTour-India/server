extends baseEmail 

block content
  p Hi #{firstName},
  p Please activate your email by clicking on this URL: #{url}
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Confirm My Email
  p If you don't want to signup, please ignore this email!
